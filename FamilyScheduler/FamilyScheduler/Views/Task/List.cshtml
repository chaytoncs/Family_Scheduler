@{
    ViewData["Title"] = "Tasks List";
}

<h1>Task List</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Task ID</th>
            <th scope="col">Description</th>
            <th scope="col">Workload</th>
            <th scope="col">Frequency</th>
            <th scope="col">Task Type</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(FamilyScheduler.Models.Task el in Model){
            <tr>
                <td>
                    @el.TaskID
                </td>
                <td>
                    @el.Description
                </td>
                <td>
                    @el.Workload.Description
                </td>
                <td>
                    @el.Frequency.Description
                </td>
                <td>
                    @el.TaskType.Description
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@el.TaskID" method="post">
                        <input type="submit" value="Delete">
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>