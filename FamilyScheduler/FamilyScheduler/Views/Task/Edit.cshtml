@model FamilyScheduler.Models.DTO.TaskDTO

@{
    ViewData["Title"] = "Edit";
}
<!--Form used to edit a selected Task.-->
<h1>Edit</h1>

<h4>Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TaskID" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FrequencyDescription" class="control-label"></label>
                <select asp-for="FrequencyID" class="form-select" asp-items="ViewBag.FrequencyList"></select>
                <span asp-validation-for="FrequencyID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskTypeDescription" class="control-label"></label>
                <select asp-for="TaskTypeID" class="form-select" asp-items="ViewBag.TaskTypeList"></select>
                <span asp-validation-for="TaskTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkloadDescription" class="control-label"></label>
                <select asp-for="WorkloadID" class="form-select" asp-items="ViewBag.WorkloadList"></select>
                <span asp-validation-for="WorkloadID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
