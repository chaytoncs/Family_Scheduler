@model FamilyScheduler.Models.Schedule
@{
    ViewData["Title"] = "Generate Schedule";
}

<h1>Generate Schedule</h1>
@if (@TempData.ContainsKey("ErrorMessage"))
{
    <h3 class="text-danger">@TempData["ErrorMessage"]?.ToString()</h3>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group">
                <label asp-for="MaxAssignments" class="control-label"></label>
                <input asp-for="MaxAssignments" type="number" min="1" class="form-control" />
                <span asp-validation-for="MaxAssignments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" type="date" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")"/>
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Generate Schedule" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

