@{
    ViewData["Title"] = "Generate Schedule";
}

<h1>Generate Schedule</h1>
@if (@TempData.ContainsKey("ErrorMessage"))
{
    <h3 class="text-danger">@TempData["ErrorMessage"]?.ToString()</h3>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="StartDate">Start Date</label>
                <input class="form-control" id="StartDate" name="StartDate" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
            </div>
            <div class="form-group">
                <label for="maxAssigns">Max Tasks Per Household Member</label>
                <input class="form-control" id="maxAssigns" name="maxAssigns" type="number" min="ViewBag.MinTasksPerUser"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Generate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

